{
    "root": true,
    "env": {
        "node": true,
        "vue/setup-compiler-macros":true,
        "lint": true
    },
    "extends": [
        "plugin:vue/vue3-essential",
        "eslint:recommended",
        "@vue/typescript/recommended",
        "@vue/prettier",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 2021
    },
    "rules": {
        "prettier/prettier": [
            "warn",
            {
                "singleQuote": true,
                "semi": false,
                "trailingComma": "es5"
            }
        ],
        "no-unused-vars": "warn"
    }
}